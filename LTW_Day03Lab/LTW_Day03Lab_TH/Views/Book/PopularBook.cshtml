@model IEnumerable<LTW_Day03Lab.Models.Book>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@foreach (var item in Model)
{
    <div class="col-xs-3 col-sm-3 col-md-3 co-lg-3">
        <div class="thumbnail">
            <img src="@item.Image" class="img-fluid product-img" alt="" />
            <div class="caption">
                <h3>@item.Title</h3>
                <p>
                    Price: @item.Price
                </p>
            </div>
        </div>
    </div>
}

@section style {
    <style>
        .product-img {
            width: 100%;
            height: 200px;
            object-fit: contain;
        }
    </style>
}
