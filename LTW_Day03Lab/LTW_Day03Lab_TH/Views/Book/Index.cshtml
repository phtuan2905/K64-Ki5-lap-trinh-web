@model IEnumerable<LTW_Day03Lab.Models.Book> 
@{
	ViewData["Title"] = "Index";
}
<h2>Danh sách các cuốn sách</h2>
<form action="" method="post" class="form-inline" style=" display: flex;flex-direction: row; gap: 5px" role="form">
	<div class="form-group" style=" display: flex;flex-direction: row; gap: 5px">
		<select name="AuthorId" class="form-control" asp-items="@ViewBag.Authors">
			<option value="">Chọn tác giả</option>
		</select>
		<select name="GenreId" class="form-control" asp-items="@ViewBag.Genres">
			<option value="">Chọn thể loại</option>
		</select>
	</div>	
	<button type="submit" class="btn btn-primary">Tìm kiếm</button>
	<a asp-action="Create" class="btn btn-danger">Thêm mới</a>
</form>
<hr />

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Id</th>
			<th>Tiêu đề</th>
			<th>Tác giả</th>
			<th>Thể loại</th>
			<th>Giá</th>
			<th>Hình ảnh</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var book in Model) 
		{
			<tr>
				<td>@book.Id</td>
				<td>@book.Title</td>
				<td>@book.AuthorId</td>
				<td>@book.GenreId</td>
				<td>@book.Price</td>
				<td>
					<img src="@book.Image" alt="@book.Title" width="40"/>
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@book.Id" class="btn tbn-sm btn-primary">Sửa</a>
				</td>
			</tr>
		}
	</tbody>
</table>

