@{
    ViewData["Title"] = "Home Page";
}

<partial name="Banner" />
<hr />
<button id="loadAjax" class="btn btn-sm btn-primary">Click to load book from partialResult</button>
<hr />
<div id="data-from-ajax" class="row">Loading data...</div>
<hr />
<h2>Popular Book from BookComponent</h2>
<div class="row">
    @await Component.InvokeAsync("Book");
</div>


@section script {
    <script>
        $('#loadAjax').click(() => {
            $('#data-from-ajax').load('/Book/PopularBook');
        })
    </script>
}
