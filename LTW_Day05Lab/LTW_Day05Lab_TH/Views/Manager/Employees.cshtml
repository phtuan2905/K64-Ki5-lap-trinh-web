@{
    ViewData["Title"] = "Employees";
}

@model IEnumerable<LTW_Day05Lab_TH.Models.Employee>;

<div class="table-container">
    <h1>Employees</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @{
                var employees = Model;
            }
            @foreach(var e in employees)
            {
                <tr>
                    <td>@e.id</td>
                    <td>@e.fullName</td>
                    <td>@(e.gender == 0 ? "Female" : "Male")</td>
                    <td>@e.phone</td>
                    <td>@e.email</td>
                    <td>$@e.salary</td>
                    <td class="@e.status.ToString()">@e.status</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-container {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      padding: 20px;
    }

    .table-container h1 {
        font-weight: 200;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    thead {
      background: #333;
      color: #fff;
    }

    th, td {
      padding: 12px 15px;
      border: 1px solid #ddd;
      text-align: left;
      font-size: 14px;
    }

    tr:nth-child(even) {
      background: #f9f9f9;
    }

    th {
      text-transform: uppercase;
      font-size: 13px;
    }

    .Active {
      color: green;
      font-weight: bold;
    }

    .Inactive {
      color: red;
      font-weight: bold;
    }
</style>