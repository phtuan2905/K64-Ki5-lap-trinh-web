@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Chuyen>

<div class="card-body p-4">            
    <!-- CardData Start -->
    <div class="table-responsive" data-simplebar>
        <table class="table table-borderless align-middle text-nowrap">
        <thead>
            <tr>
            <th scope="col">Chuyến xe</th>
            <th scope="col">Ngày</th>
            <th scope="col">Giờ</th>
            <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody id="content-container">
            @foreach (var c in Model) {
                <tr>
                    <td>
                    <div class="d-flex align-items-center">
                    <div class="me-4">
                        <img
                        src="/images/cars/@c.SoXeNavigation.Anh"
                        width="50"
                        class="rounded-circle"
                        alt=""
                        />
                    </div>

                    <div>
                        <h6 class="mb-1 fw-bolder">@c.MaTuyen</h6>
                        <p class="fs-3 mb-0">@c.SoXe</p>
                    </div>
                    </div>
                </td>
                <td>
                    <p class="fs-3 fw-normal mb-0">@c.NgayGio.Value.ToString("dd/MM/yyyy")</p>
                </td>
                <td>
                    <p class="fs-3 fw-normal mb-0 text-success">
                    @c.NgayGio.Value.ToString("hh:mm:ss")
                    </p>
                </td>
                <td>
                    <span><a asp-controller="Home" asp-action="Edit" asp-route-cid="@c.MaChuyen">Edit</a>|Delete</span>
                </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
    <!-- CardData End -->
</div>

@section Scripts {
    <script>
        $(document).on('change', 'select', function(e) {
            var id = $(this).val();
            console.log(id);
            $.ajax({
                url: 'Home/Filter',
                data: {tid: id},
                success: function(res) {
                    $('#content-container').html(res);
                }
            });
        });
    </script>
}
