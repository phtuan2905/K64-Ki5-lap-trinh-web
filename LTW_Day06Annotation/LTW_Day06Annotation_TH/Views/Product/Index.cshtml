@model IEnumerable<LTW_Day06Annotation_TH.Models.ProductModel>

@{
    ViewData["Title"] = "List";
}

<h2>Product</h2>
<h3>List</h3>
<a asp-action="Create">Create new Product</a>
<hr />
<table class="table-bordered product-table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Image)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.SalePrice)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>@Html.DisplayNameFor(m => m.CategoryId)</th>
            <th>Chi tiết</th>
            <th>Chỉnh sửa</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var categoryName = "";
            foreach (var c in ViewBag.Categories)
            {
                if (@item.CategoryId == c.Id)
                {
                    categoryName = c.Name;
                    break;
                }
            }
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@item.Image" alt="Alternate Text" /></td>
                <td>@item.Price</td>
                <td>@item.SalePrice</td>
                <td>@item.Description</td>
                <td>@categoryName</td>
                <td><a asp-r asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">🔍</a></td>
                <td><a asp-r asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">✏️</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑️</a></td>
            </tr>
        }
    </tbody>
</table>

<style>
    .product-table {
        width: 100%;
    }
    .product-table img {
        width: 100px;
        height: auto;
    }
</style>
